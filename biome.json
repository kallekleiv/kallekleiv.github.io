{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessCatch": "error",
        "noExtraBooleanCast": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "noShoutyConstants": "warn",
        "useSingleVarDeclarator": "warn"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noEmptyInterface": "error"
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!dist/",
      "!dist/**",
      "!build/",
      "!node_modules/",
      "!*.log",
      "!*.tmp",
      "!*.temp",
      "!.DS_Store",
      "!*.test.tsx",
      "!*.test.ts",
      "!*.min.js"
    ]
  }
}
